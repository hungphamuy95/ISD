<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="~/Images/logo.ico" />
    <link href="~/Content/Custom.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/jquery.validate-vsdoc.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/respond.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.15.0/jquery.validate.min.js"></script>
    @*<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">*@
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    @*<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>*@
    <script src="~/Content/bootstrap.min.js"></script>
    @*<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>*@
    <script src="~/Content/jquery.min.js"></script>
    @*<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js"></script>*@
    <script src="~/Content/angular.min.js"></script>
    @*<script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.1/angular-sanitize.js"></script>*@
    <script src="~/Content/angular-sanitize.js"></script>
    @*<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.1/angular-animate.min.js"></script>*@
    <script src="~/Content/angular-animate.min.js"></script>
    <script src="~/assets/plugins/ckeditor/ckeditor.js"></script>
    <script src="~/assets/plugins/ckfinder/ckfinder.js"></script>
</head>
<body>
    <div class="container">
        <div class="header">
            <div class="row">
                <div class="col-lg-6">
                    <img src="~/Images/logo.png" alt="logo" style="height:70px; width:70px;" />
                </div>
                <div class="col-lg-2"></div>
                <div class="col-lg-4">

                    <span style="color:cornflowerblue;">HOTLINE:</span>&nbsp;<span style="color:red;">03203 747 630</span>&nbsp;
                    <span class="glyphicon glyphicon-envelope"></span>Webmail
                </div>
                <div class="col-lg-12">
                    <h4><a href="@Url.Action("Index","Home")">TRANG CHỦ</a> | <a href="@Url.Action("ChangePassword","Admin")">ĐỔI MẬT KHẨU</a> | <a href="@Url.Action("Logoff","Account")">ĐĂNG XUẤT</a></h4>
                </div>
            </div>
        </div>
    </div>
    <div class="nav navbar-default" style="background:#3598db;">
        <br />
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <hr />
                @if (TempData["AlertMessage"] != null)
                {
                    <div class="alert @TempData["AlertType"]" id="alertbox">
                        @TempData["AlertMessage"]
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="row">
        @RenderBody()
        @RenderPage("CkSource.cshtml")
    </div>
    <div class="row">
        <div class="nav navbar-default" style="background:#1c3e61;">
            <br />
            <div class="container">
                <div class="col-lg-6"><span style="color:white;">Bản quyền &copy;@DateTime.Now.Year thuộc về Trường trung học cơ sở Thị trấn Tứ Kỳ<br />Thị trấn Tứ Kỳ, huyện Tứ Kỳ, tỉnh Hải Dương</span><br />&nbsp;</div>
                <div class="col-lg-2"></div>
                <div class="col-lg-4"><span style="color:white;">Phát triển bởi công ty Crystal</span><br />&nbsp;</div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
