@model TK.Business.Model.LoginModel
<head>
    <title>ĐĂNG NHẬP</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="~/Images/logo.ico" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    @*<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>*@
    <script src="~/Content/bootstrap.min.js"></script>
</head>
<body>
    
<div class="container">
    <div class="header">
        <div class="row">
            <div class="col-lg-6">
                <a href="@Url.Action("Index","Home")"><img src="~/Images/logo.png" alt="logo" style="height:70px; width:70px;" /></a>
            </div>
            <div class="col-lg-2"></div>
            <div class="col-lg-4">

                <span style="color:cornflowerblue;">HOTLINE:</span>&nbsp;<span style="color:red;">03203 747 630</span>&nbsp;
                <span class="glyphicon glyphicon-envelope"></span>Webmail
            </div>
        </div>
    </div>
    </div>
    <div class="nav navbar-default" style="background:#3598db;">
        <br />
    </div>
    <br /><br />
    <div class="container">
    <div class="row">
       
        <div class="col-md-6 col-md-offset-3">
            <div class="login-panel panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">ĐĂNG NHẬP VÀO HỆ THỐNG</h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm(new { ReturnUrl = ViewBag.returnurl }))
                    {
                        <fieldset>
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">

                                @Html.TextBoxFor(model => model.username, new { @placeholder = "tên đăng nhập", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group">
                                @Html.TextBoxFor(model => model.password, new { @type = "password", @placeholder = "mật khẩu", @class="form-control"})
                                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })

                            </div>
                            <div class="checkbox">
                                <label>
                                    @Html.EditorFor(model => model.rememberme)
                                    @Html.ValidationMessageFor(model => model.rememberme, "", new { @class = "text-danger" })ghi nhớ
                                </label>
                            </div>
                            <input type="submit" value="đăng nhập" class="btn btn-default" />
                        </fieldset>
                    }
                </div>
            </div>
        </div>
        <div class="col-lg-12" style="text-align:center;">
            &copy;@DateTime.Now.Year Crystal, Inc
        </div>
    </div>
    
</div>
</body>

