@model TK.Business.Model.TblGalleryModel
@{
    ViewBag.Title = "quản lý album ảnh";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <a href="@Url.Action("Index","Admin")">quản trị hệ thống</a>&nbsp;&nbsp;&nbsp;&nbsp;<strong>></strong>&nbsp;&nbsp;&nbsp;&nbsp;<a href="@Url.Action("TblGalleryListIndex","Admin")">quản lý album ảnh</a>&nbsp;&nbsp;&nbsp;&nbsp;<strong>></strong>&nbsp;&nbsp;&nbsp;&nbsp;<span style="color:red;">tạo ảnh mới</span>
    <br />&nbsp;
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h4>tạo ảnh mới</h4>
        </div>
        <div class="panel-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <table class="table">
                    <tr>
                        <th>tên ảnh</th>
                        <td><div class="col-lg-4">@Html.TextBoxFor(model => model.name, new { @class = "form-control", @required = "required" })</div></td>
                    </tr>
                    <tr>
                        <th>đường dẫn</th>
                        <td><div class="col-lg-4">@Html.TextBoxFor(model => model.url, new { @class = "form-control", @id = "txtImage", @required = "required" })</div><button id="btnselect" class="btn btn-info">chọn ảnh</button></td>
                    </tr>
                </table>
                <input type="submit" value="tạo mới" class="btn btn-default" />
                <br />
            }
        </div>
    </div>
    
    <a href="@Url.Action("Index","Admin")">quản trị hệ thống</a>&nbsp;&nbsp;&nbsp;&nbsp;<strong>></strong>&nbsp;&nbsp;&nbsp;&nbsp;<a href="@Url.Action("TblGalleryListIndex","Admin")">quản lý album ảnh</a>&nbsp;&nbsp;&nbsp;&nbsp;<strong>></strong>&nbsp;&nbsp;&nbsp;&nbsp;<span style="color:red;">tạo ảnh mới</span>
    <br />&nbsp;
</div>
   

