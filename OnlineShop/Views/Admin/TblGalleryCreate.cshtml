@model TK.Business.Model.TblGalleryModel
@{
    ViewBag.Title = "quản lý album ảnh";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h4><a href="@Url.Action("Index","Admin")">trang chủ</a> <strong>>></strong> <a href="@Url.Action("TblGalleryListIndex","Admin")">quản lý album ảnh</a> <strong>>></strong> <span style="color:red;">tạo ảnh mới</span></h4>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <table class="table table-bordered">
        <tr class="info">
            <th>tên ảnh</th>
            <td>@Html.TextBoxFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })</td>
        </tr>
        <tr class="info">
            <th>đường dẫn</th>
            <td>@Html.TextBoxFor(model => model.url, new { htmlAttributes = new { @class = "form-control" }, @id = "txtImage" })<button id="btnselect">chọn ảnh</button></td>
        </tr>
    </table>
    <input type="submit" value="tạo mới" class="btn btn-default" />
    <br />
}
<br />

