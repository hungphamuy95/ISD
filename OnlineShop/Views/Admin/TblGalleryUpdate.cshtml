@model TK.Business.Data.TblGallery
@{
    ViewBag.Title = "cập nhật ảnh";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container">
    <a href="@Url.Action("Index","Admin")">quản trị hệ thống</a>&nbsp;&nbsp;&nbsp;&nbsp;<strong>></strong>&nbsp;&nbsp;&nbsp;&nbsp;<a href="@Url.Action("TblGalleryListIndex","Admin")">quản lý album ảnh</a>&nbsp;&nbsp;&nbsp;&nbsp;<strong>></strong>&nbsp;&nbsp;&nbsp;&nbsp;<span style="color:red;">cập nhật ảnh</span>
    <br />&nbsp;
    <div class="panel panel-primary">
        <div class="panel-heading"><h4>cập nhật ảnh</h4></div>
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <table class="table">
                        <tr>
                            <th>tên ảnh</th>
                            <td><div class="col-lg-4">@Html.TextBoxFor(model => model.Name, new { @class = "form-control", @required = "required" })</div></td>
                        </tr>
                        <tr>
                            <th>đường dẫn</th>
                            <td><div class="col-lg-4">@Html.TextBoxFor(model => model.ImageUrl, new { @class = "form-control", @id = "txtImage", @required = "required" })</div><button class="btn btn-success" id="btnselect">chọn ảnh</button></td>
                        </tr>
                        <tr>
                            <th>xem ảnh</th>
                            <td><img src="@Model.ImageUrl" alt="@Model.Name" height="400" width="600" /></td>
                        </tr>
                    </table>
                    <input type="submit" value="cập nhật" class="btn btn-info" />
                    <br />
                }
            </div>
    </div>
</div>
<br />
<script src="~/assets/plugins/ckfinder/ckfinder.js"></script>
<script>
    $(document).ready(function () {
        $("#txtImage").click(function () {
            alert("bạn vừa nhấp vào đường dẫn của ảnh, điểu này có thể gây lỗi hệ thống, hãy chọn nút chọn ảnh để upload ảnh lên server");
        });
    });
</script>