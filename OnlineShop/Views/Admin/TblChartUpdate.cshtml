@model TK.Business.Data.TblChart
@{
    ViewBag.Title = "quản lý slide ảnh";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4><a href="@Url.Action("Index","Admin")">trang chủ</a> <strong>>></strong> <span style="color:red;">cập nhật slide ảnh</span></h4>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

<table class="table table-bordered">
        <tr class="info">
            <th>ảnh 1</th>
            <td>@Html.TextBoxFor(model => model.src1, new { htmlAttributes = new { @class = "form-control" }, @id = "txtImage" })<button id="btnselect">chọn ảnh</button></td>
        </tr>
        <tr class="info">
            <th>ảnh 2</th>
            <td>@Html.TextBoxFor(model => model.src2, new { htmlAttributes = new { @class = "form-control" }, @id = "txtImage1" })<button id="btnselect1">chọn ảnh</button></td>
        </tr>
        <tr class="info">
            <th>ảnh 3</th>
            <td>@Html.TextBoxFor(model => model.src3, new { htmlAttributes = new { @class = "form-control" }, @id = "txtImage2" })<button id="btnselect2">chọn ảnh</button></td>
        </tr>
        <tr class="info">
            <th>ảnh 4</th>
            <td>@Html.TextBoxFor(model => model.src4, new { htmlAttributes = new { @class = "form-control" }, @id = "txtImage3" })<button id="btnselect3">chọn ảnh</button></td>
        </tr>
        <tr class="info">
            <th>ảnh 5</th>
            <td>@Html.TextBoxFor(model => model.src5, new { htmlAttributes = new { @class = "form-control", @value = Model.src5 }, @id = "txtImage4" })<button id="btnselect4">chọn ảnh</button></td>
        </tr>
    </table>
    <input type="submit" value="cập nhật" class="btn btn-default" />
        <br />

}

